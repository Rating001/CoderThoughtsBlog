@using Microsoft.AspNetCore.Identity
@inject SignInManager<BlogUser> SignInManager
@inject UserManager<BlogUser> UserManager

@{
    BlogUser blogUser = await UserManager.GetUserAsync(User);
}

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{

    <li class="nav-item">
            <a class="nav-link nav-color px-lg-3 py-3 py-lg-4 name-down" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @blogUser.FullName!</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link nav-color px-lg-3 py-3 py-lg-4 btn btn-link">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link nav-color" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link nav-color" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
